{% extends 'base.html.twig' %}

{% block title %}Holiday index{% endblock %}

{% block body %}
    <h1>Holiday index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Destination</th>
                <th>Voyagers</th>
                <th>Duration</th>
                <th>StartDate</th>
                <th>Price</th>
                <th>Rating</th>
                <th>HotelDetails</th>
                <th>LocationDetails</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for holiday in holidays %}
            <tr>
                <td>{{ holiday.id }}</td>
                <td>{{ holiday.Destination }}</td>
                <td>{{ holiday.voyagers }}</td>
                <td>{{ holiday.duration }}</td>
                <td>{{ holiday.startDate ? holiday.startDate|date('Y-m-d') : '' }}</td>
                <td>{{ holiday.price }}</td>
                <td>{{ holiday.rating }}</td>
                <td>{{ holiday.hotelDetails }}</td>
                <td>{{ holiday.locationDetails }}</td>
                <td>{{ holiday.image }}</td>
                <td>
                    <a href="{{ path('app_holiday_show', {'id': holiday.id}) }}">show</a>
                    <a href="{{ path('app_holiday_edit', {'id': holiday.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_holiday_new') }}">Create new</a>
{% endblock %}
